// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
}

// --- MODELOS DE AUTENTICACIÓN Y USUARIOS ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @default(now()) @map("updated_at")

  accounts Account[]
  sessions Session[]
  historial HistorialMuestra[]

  historialImport HistorialImport[] @relation("ImportesUsuario")
  historialExport HistorialExport[] @relation("ExportesUsuario")

  @@map("users")
}

model HistorialImport {
  id          String   @id @default(cuid())
  creadoEn    DateTime @default(now()) @map("creado_en")

  // Información básica del archivo importado
  nombreArchivo   String
  rutaArchivo     String
  tamanoBytes     Int?
  tipoMime        String?

  // Información de origen
  origenDatos     String?    // Excel, CSV, JSON, TXT
  nombreHoja      String?    // Solo para Excel

  // Metadatos detectados automáticamente
  tieneEncabezados   Boolean?
  delimitadorDetectado String?
  previewInicio       Int?
  previewFin          Int?

  // Contenido
  registrosTotales Int
  datasetId        String?     // ID del dataset creado al importar

  // Campo extra para almacenar cualquier dato adicional
  metadata         Json?

  // Relación con usuario
  usuarioId String
  usuario   User @relation(name: "ImportesUsuario", fields: [usuarioId], references: [id], onDelete: Cascade)
  @@map("historial_import")
}

///--- NUEVO MODELO DE HISTORIAL RRELACIONADO CON USUARIOS
model HistorialMuestra {
  id              String   @id @default(cuid())
  name            String                              // nombre definido por el usuario
  createdAt       DateTime @default(now()) @map("created_at")
  records         Int                                  // cantidad de registros muestreados
  range           String                               // "start-end"
  seed            Int                                   // semilla usada
  allowDuplicates Boolean                               // permitir duplicados
  source          String                                // archivo fuente (ruta o nombre)
  hash            String                                // hash del muestreo (ya existente)
  tipo            String   @default("estandar")         // "estandar" | "masivo"
  archivoResultado String?                              // salida del muestreo

  // --- NUEVOS CAMPOS NECESARIOS ---
  // ID del dataset fuente (si tienes tablas Dataset)
  sourceDatasetId String?     
  // Número total de registros del archivo original (como CaseWare)
  totalRecords    Int?          
  // Inicio y fin del rango numérico como enteros (importante para auditoría)
  rangeStart      Int?          
  rangeEnd        Int?          
  // Índices originales seleccionados (útil para auditoría)
  indicesJson     Json?         
  // Tiempo de ejecución del muestreo en milisegundos
  executionTimeMs Int?          
  // Algoritmo RNG usado (mulberry32 en tu caso)
  randomAlgorithm String?       
  // Campo de control (CaseWare: "No Control Total")
  controlField    String?       
  // Control total (CaseWare: "No Control Total")
  controlTotal    String?       

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("historial_muestras")
}


model HistorialExport {
  id          String   @id @default(cuid())
  creadoEn    DateTime @default(now()) @map("creado_en")

  // Datos principales de exportación
  nombreExportado   String
  rutaExportacion   String
  formatoExportacion String    // XLSX, CSV, etc.
  rangoInicio       Int
  rangoFin          Int
  registrosExportados Int

  // Datos de origen
  muestraId        String?
  archivoFuenteNombre String?

  // Datos adicionales
  metadata Json?

  // Relación con usuario
  usuarioId String
  usuario   User @relation(name: "ExportesUsuario", fields: [usuarioId], references: [id], onDelete: Cascade)
  @@map("historial_export")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum Role {
  ADMIN
  USER
  GERENTE
}

model Cliente {
  id              Int    @id @default(autoincrement())
  codigo          String @unique
  nombre          String
  tipo            String

  @@map("clientes")
}